{% block grid %}

    {% block widget_start %}
        <div class="span-none-padding-large-{{ size }} " style="height: 100px">
        <section class="trinity-widget" style="height: 100%">
    {% endblock %}


    {% block widget_contnet_wrapper %}
        {% block widget_title %}
            <h3 class="pull-left widget-title">{{ titleCounter }}</h3>
        {% endblock %}
        <a class="pull-right margin-top-15 margin-right-15" href="{{ getWidgetUrl('remove', widget, app.user) }}">
            <i class="{{ icon }} font-25"></i>
        </a>
        <main class="row content-box">
            <div class="content" >
                <h6 class="margin-top-5 margin-bottom-15 margin-left-15">{{ title }}</h6>
                <div class="row" style="background-color: silver;height: 5px" >
                    <div style="background-color: {{ color }};height: 5px; width: {{percent}}%" ><span style="color: transparent">.</span></div>
                </div>
            </div>
        </main>
    {% endblock %}


    {% block widget_footer_wrapper %}
        <footer class="row">
            {% block widget_footer %} {% endblock %}
        </footer>
    {% endblock %}


    {% block widget_end %}
        </section>
        </div>
    {% endblock %}
{% endblock %}

