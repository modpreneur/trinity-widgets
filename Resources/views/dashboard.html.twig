{% block dashboard %}

    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
    <hidden id="render-url" data-url="{{ path('ajax_render_widgets') }}"></hidden>


    <div class="dashboard-widgets">

        <div class="small-widgets row">
            {% for widget in staticWidgets %}
                <div  data-widget="{{ widget }}" class="widget-field small-widget">{{ renderWidget(widget) }} </div>
            {% endfor %}
        </div>

        <div class="dragable-widgets row" id="dragable-widgets" data-url="{{ path('change_order_widget',{order:'0'}) }}">

            {% for widget in showedWidgets %}

                <div  data-widget="{{ widget }}" class="widget-field regular-widget w-{{ getWidgetSize(widget) }} {{ getWidgetStyle(getWidgetSize(widget)) }}" >{{ renderWidget(widget) }} </div>

            {% endfor %}

        </div>

    </div>


    <div class="people-item">
        <a href="#show-widgets-form" class="modal-a button button-secondary">MODAL</a>

        <!--DESKTOP-->
        <div id="show-widgets-form" class="modal-dialog small-hidden">
            <a href="#close" title="Close" class="full-width-close"></a>
            <div class="row">
                <a href="#close" title="Close" class="cross-link">
                    <i class="trinity trinity-close"></i>
                </a>
                <div class="span-none-padding-medium-24">
                    <header>
                        <h2>
                            Dashboard - settings
                        </h2>
                        <p>
                            Select your favourite widgets.
                        </p>
                    </header>

                    {{ form(form, {'action': path('widget-manage'), 'method': 'POST' } ) }}
                </div>
            </div>

        </div>
    </div>

{% endblock %}
